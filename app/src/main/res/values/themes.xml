<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Toolbox_io" parent="Theme.Material3.DynamicColors.DayNight">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowEnterAnimation">@anim/slide_left</item>
        <item name="android:windowExitAnimation">@anim/scale_down_translate</item>
        <!-- <item name="android:windowLightNavigationBar">?attr/isLightTheme</item> | api 27 -->
    </style>

    <style name="Theme.Toolbox_io.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style
        name="Theme.Toolbox_io.NoDynamicColor"
        parent="Theme.Toolbox_io.Light.NoDynamicColor"
        tools:keep="@style/Theme_Toolbox_io_NoDynamicColor" />
    <style name="Theme.Toolbox_io.NoActionBar.NoDynamicColor" parent="Theme.Toolbox_io.Light.NoActionBar.NoDynamicColor">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Toolbox_io.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">#FFFCF8FF</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/app_icon</item>
        <!-- <item name="android:windowSplashScreenBackground">#FCF5FD / #141218</item> | api 31 -->
        <item name="postSplashScreenTheme">@style/Theme.Toolbox_io.NoActionBar</item>
    </style>

    <style name="Theme.SplashScreen.Files">
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="Theme.Toolbox_io.Night" parent="Theme.Material3.DynamicColors.Dark">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="Theme.Toolbox_io.Night.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.Toolbox_io.Night.NoDynamicColor" parent="Theme.Material3.Dark">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>

        <item name="colorPrimary">#FFC1C1FF</item>
        <item name="colorOnPrimary">#FF2A2A60</item>
        <item name="colorPrimaryContainer">#FF404178</item>
        <item name="colorOnPrimaryContainer">#FFE2DFFF</item>
        <item name="colorSecondary">#FFC6C4DD</item>
        <item name="colorOnSecondary">#FF2F2F42</item>
        <item name="colorSecondaryContainer">#FF454559</item>
        <item name="colorOnSecondaryContainer">#FFE2E0F9</item>
        <item name="colorTertiary">#FFE9B9D3</item>
        <item name="colorOnTertiary">#FF46263A</item>
        <item name="colorTertiaryContainer">#FF5F3C51</item>
        <item name="colorOnTertiaryContainer">#FFFFD8EB</item>
        <item name="colorError">#FFFFB4AB</item>
        <item name="colorOnError">#FF690005</item>
        <item name="colorErrorContainer">#FF93000A</item>
        <item name="colorOnErrorContainer">#FFFFDAD6</item>
        <item name="android:colorBackground">#FF131318</item>
        <item name="colorOnBackground">#FFE4E1E9</item>
        <item name="colorSurface">#FF131318</item>
        <item name="colorOnSurface">#FFE4E1E9</item>
        <item name="colorSurfaceVariant">#FF47464F</item>
        <item name="colorOnSurfaceVariant">#FFC8C5D0</item>
        <item name="colorOutline">#FF918F9A</item>
        <item name="colorOutlineVariant">#FF47464F</item>
        <item name="colorSurfaceDim">#FF131318</item>
        <item name="colorSurfaceBright">#FF39383F</item>
        <item name="colorSurfaceContainerLowest">#FF0E0E13</item>
        <item name="colorSurfaceContainerLow">#FF1B1B21</item>
        <item name="colorSurfaceContainer">#FF1F1F25</item>
        <item name="colorSurfaceContainerHigh">#FF2A292F</item>
        <item name="colorSurfaceContainerHighest">#FF35343A</item>
    </style>

    <style name="Theme.Toolbox_io.Night.NoActionBar.NoDynamicColor" parent="Theme.Toolbox_io.Night.NoDynamicColor">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Toolbox_io.Light" parent="Theme.Material3.DynamicColors.Light">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>
    <style name="Theme.Toolbox_io.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.Toolbox_io.Light.NoDynamicColor" parent="Theme.Material3.Light">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>

        <item name="colorPrimary">#FF585992</item>
        <item name="colorOnPrimary">#FFFFFFFF</item>
        <item name="colorPrimaryContainer">#FFE2DFFF</item>
        <item name="colorOnPrimaryContainer">#FF14134A</item>
        <item name="colorSecondary">#FF5D5C72</item>
        <item name="colorOnSecondary">#FFFFFFFF</item>
        <item name="colorSecondaryContainer">#FFE2E0F9</item>
        <item name="colorOnSecondaryContainer">#FF1A1A2C</item>
        <item name="colorTertiary">#FF795369</item>
        <item name="colorOnTertiary">#FFFFFFFF</item>
        <item name="colorTertiaryContainer">#FFFFD8EB</item>
        <item name="colorOnTertiaryContainer">#FF2F1124</item>
        <item name="colorError">#FFBA1A1A</item>
        <item name="colorOnError">#FFFFFFFF</item>
        <item name="colorErrorContainer">#FFFFDAD6</item>
        <item name="colorOnErrorContainer">#FF410002</item>
        <item name="android:colorBackground">#FFFCF8FF</item>
        <item name="colorOnBackground">#FF1B1B21</item>
        <item name="colorSurface">#FFFCF8FF</item>
        <item name="colorOnSurface">#FF1B1B21</item>
        <item name="colorSurfaceVariant">#FFE4E1EC</item>
        <item name="colorOnSurfaceVariant">#FF47464F</item>
        <item name="colorOutline">#FF777680</item>
        <item name="colorOutlineVariant">#FFC8C5D0</item>
        <item name="colorSurfaceDim">#FFDCD9E0</item>
        <item name="colorSurfaceBright">#FFFCF8FF</item>
        <item name="colorSurfaceContainerLowest">#FFFFFFFF</item>
        <item name="colorSurfaceContainerLow">#FFF6F2FA</item>
        <item name="colorSurfaceContainer">#FFF0ECF4</item>
        <item name="colorSurfaceContainerHigh">#FFEAE7EF</item>
        <item name="colorSurfaceContainerHighest">#FFE4E1E9</item>
    </style>
    <style name="Theme.Toolbox_io.Light.NoActionBar.NoDynamicColor" parent="Theme.Toolbox_io.Light.NoDynamicColor">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.FakeCrash" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="Theme.Toolbox_io.Licenses">
        <item name="android:statusBarColor">?attr/colorSurfaceContainer</item>
        <item name="android:windowFullscreen">false</item>
    </style>

    <style name="Theme.Toolbox_io.Website" parent="Theme.Toolbox_io.Night.NoActionBar.NoDynamicColor">
        <item name="colorSurface">#3A3A3A</item>
        <item name="android:textAppearance">@style/TextAppearance.Material3.TitleMedium</item>
    </style>
</resources>