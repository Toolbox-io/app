<resources>
    <!-- Base application theme. -->
    <style name="Theme.UltimateSecurity" parent="Theme.Material3.DayNight">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">?attr/isLightTheme</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="fontFamily">@font/rethink_sans</item>
    </style>

    <style name="Theme.UltimateSecurity.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">#FCF5FD</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/app_icon_adapted</item>
        <item name="postSplashScreenTheme">@style/Theme.UltimateSecurity.NoActionBar</item>
    </style>

    <style name="Theme.UltimateSecurity.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.UltimateSecurity.Night" parent="Theme.Material3.Dark" />

    <style name="Theme.UltimateSecurity.Night.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Widget.Material3.NavigationView.NoSeparators"
        parent="Theme.UltimateSecurity">
        <item name="android:listDivider">@android:color/transparent</item>
        <item name="android:dividerHeight">0dp</item>
    </style>

    <style name="Theme.UltimateSecurity.ImageViewer" parent="Theme.UltimateSecurity.Night.NoActionBar">
        <item name="android:windowSharedElementEnterTransition">@transition/img</item>
        <item name="android:windowSharedElementExitTransition">@transition/img</item>
    </style>

    <style name="Theme.UltimateSecurity.MainActivity" parent="Theme.UltimateSecurity.NoActionBar">
        <item name="android:windowSharedElementEnterTransition">@transition/img</item>
        <item name="android:windowSharedElementExitTransition">@transition/img</item>
    </style>

    <style name="Theme.UltimateSecurity.FakeCrash" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowFullscreen">true</item>
    </style>


    <style name="Theme.UltimateSecurity.PopupOverlay" parent="ThemeOverlay.Material3.Light" />

    <style name="Widget.Material3.Button.IconButton.Filled.Red">
        <item name="colorPrimary">#FF4F4F</item>
        <item name="colorOnPrimary">#ffffff</item>
    </style>
</resources>