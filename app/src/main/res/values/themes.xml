<resources>
    <!-- Base application theme. -->
    <style name="Theme.UltimateSecurity" parent="Theme.Material3.DynamicColors.DayNight">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowEnterAnimation">@anim/slide_left</item>
        <item name="android:windowExitAnimation">@anim/scale_down_translate</item>
        <!-- <item name="android:windowLightNavigationBar">?attr/isLightTheme</item> | api 27 -->
    </style>

    <style name="Theme.UltimateSecurity.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.UltimateSecurity.NoDynamicColor" parent="Theme.UltimateSecurity.Light.NoDynamicColor" />
    <style name="Theme.UltimateSecurity.NoActionBar.NoDynamicColor" parent="Theme.UltimateSecurity.Light.NoActionBar.NoDynamicColor">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.UltimateSecurity.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">#FCF5FD</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/app_icon_2</item>
        <!-- <item name="android:windowSplashScreenBackground">#FCF5FD / #141218</item> | api 31 -->
        <item name="postSplashScreenTheme">@style/Theme.UltimateSecurity.NoActionBar</item>
    </style>

    <style name="Theme.SplashScreen.Files">
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="Theme.UltimateSecurity.Night" parent="Theme.Material3.DynamicColors.Dark">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <!--
    working properly in auth activity
