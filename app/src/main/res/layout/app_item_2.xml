<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:paddingTop="10dp"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <ru.morozovit.android.ui.RoundedCornerLayout
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:cornerRadius="25dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/appSeparator"
        android:id="@+id/appIcon_wrapper"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp">
        <ImageView
            android:id="@+id/appIcon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:importantForAccessibility="no"
            android:scaleType="fitCenter"
            tools:ignore="ImageContrastCheck"
            tools:src="@mipmap/app_icon" />
    </ru.morozovit.android.ui.RoundedCornerLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/appIcon_wrapper"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical"
        android:paddingStart="10dp"
        android:paddingBottom="10dp"
        android:paddingEnd="10dp">
        <TextView
            android:id="@+id/appName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="Example Application with a very long name" />

        <TextView
            android:id="@+id/appPackage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            tools:text="com.example.application.with.a.very.long.name" />
    </LinearLayout>
    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/appSeparator" />
</androidx.constraintlayout.widget.ConstraintLayout>