        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="ButtonStyle">
                <Button
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:text="1"
                    tools:ignore="HardcodedText"
                    android:layout_marginEnd="5dp"
                    android:textSize="30sp"
                    android:id="@+id/auth_1" />
                <Button
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:text="2"
                    tools:ignore="HardcodedText"
                    android:layout_marginEnd="5dp"
                    android:textSize="30sp"
                    android:id="@+id/auth_2" />
                <Button
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:text="3"
                    tools:ignore="HardcodedText"
                    android:textSize="30sp"
                    android:id="@+id/auth_3" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="ButtonStyle">
                <Button
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:text="4"
                    tools:ignore="HardcodedText"
                    android:layout_marginEnd="5dp"
                    android:textSize="30sp"
                    android:id="@+id/auth_4" />
                <Button
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:text="5"
                    tools:ignore="HardcodedText"
                    android:layout_marginEnd="5dp"
                    android:textSize="30sp"
                    android:id="@+id/auth_5" />
                <Button
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:text="6"
                    tools:ignore="HardcodedText"
                    android:textSize="30sp"
                    android:id="@+id/auth_6" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="ButtonStyle">
                <Button
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:text="7"
                    tools:ignore="HardcodedText"
                    android:layout_marginEnd="5dp"
                    android:textSize="30sp"
                    android:id="@+id/auth_7" />
                <Button
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:text="8"
                    tools:ignore="HardcodedText"
                    android:layout_marginEnd="5dp"
                    android:textSize="30sp"
                    android:id="@+id/auth_8" />
                <Button
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:text="9"
                    tools:ignore="HardcodedText"
                    android:textSize="30sp"
                    android:id="@+id/auth_9" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="ButtonStyle">

                <Button
                    android:id="@+id/auth_erase"
                    style="?attr/materialIconButtonFilledStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:contentDescription="@string/erase"
                    android:theme="@style/Widget.Material3.Button.IconButton.Filled.Red"
                    app:icon="@drawable/erase"
                    tools:ignore="HardcodedText" />
                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/auth_clear"
                    style="?attr/materialIconButtonFilledStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/clear"
                    android:theme="@style/Widget.Material3.Button.IconButton.Filled.Red"
                    app:icon="@drawable/delete"
                    tools:ignore="HardcodedText" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>